<?xml version="1.0" encoding="utf-8"?>
<window>
  <coordinates>
    <left>100</left>
    <top>50</top>
  </coordinates>
  <controls>
    <!-- Code for the image control -->
    <control type="image">
      <description>Team 1 Icon</description>
      <left>10</left>
      <top>120</top>
      <width>50</width>
      <height>50</height>
      <texture colordiffuse="white">{{ icon1_source }}</texture>
      <visible>Control.HasFocus(303)</visible>
    </control>
    
    <!-- Code for the image control -->
    <control type="image">
      <description>Team 2 Icon</description>
      <left>10</left>
      <top>180</top>
      <width>50</width>
      <height>50</height>
      <texture colordiffuse="white">{{ icon2_source }}</texture>
      <visible>Control.HasFocus(303)</visible>
    </control>
    <control type="image">
      <description>Image</description>
      <width>1100</width>
      <height>600</height>
      <texture colordiffuse="4DFFFFFF">score.png</texture>
      <colordiffuse></colordiffuse>
      <bordertexture border="2" colordiffuse="black">white.png</bordertexture>
      <bordersize>10</bordersize>
    </control>
    
	<control type="text" id="303">
      <description>text</description>
      <top>11</top>
      <left>13</left>
      <width>388</width>
      <height>100</height>
      <font>font60</font>
      <align>center</align>
      <aligny>center</aligny>
      <textcolor>white</textcolor>
      <shadowcolor>black</shadowcolor>
    </control>
    <control type="textbox" id="300">
      <description>Text</description>
      <top>30</top>
      <left>100</left>
      <width>1000</width>
      <height>550</height>
      <font>Mono26</font>
      <align>left</align>
      <aligny>center</aligny>
      <textcolor>yellow</textcolor>
      <shadowcolor>black</shadowcolor>
      <pagecontrol>301</pagecontrol>
    </control>
    
    <control type="scrollbar" id="301">
      <description>My first scroll bar control</description>
      <left>1080</left>
      <top>10</top>
      <width>10</width>
      <height>570</height>
      <visible>true</visible>
      <texturesliderbackground></texturesliderbackground>
      <texturesliderbar>white.png</texturesliderbar>
      <texturesliderbarfocus>white.png</texturesliderbarfocus>
      <textureslidernib></textureslidernib>
      <textureslidernibfocus></textureslidernibfocus>
      <pulseonselect></pulseonselect>
      <orientation>vertical</orientation>
      <showonepage>true</showonepage>
      <onup></onup>
      <ondown></ondown>
      <onleft>302</onleft>
      <onright>302</onright>
    </control>
    
    <control type="button" id="302">
      <left>990</left>
      <top>540</top>
      <description>Close</description>
      <width>75</width>
      <height>37</height>
      <texturefocus colordiffuse="lime">close.png</texturefocus>
      <texturenofocus colordiffuse="grey">close.png</texturenofocus>
      <bordersize>5</bordersize>
      <onleft>301</onleft>
      <onright>301</onright>
    </control>
  </controls>
</window>
